                    li.main-header__item
                        a(href="/edit-jobs", class=(path === '/' ? 'active' : '')) Edit Jobs
                    li.main-header__item
                        a(href="/teams", class=(path === '/products' ? 'active' : '')) Teams
                    li.main-header__item
                        a(href="/admin", class=(path === '/products' ? 'active' : '')) Admin

            nav.mobile-nav
                ul.mobile-nav__item-list
