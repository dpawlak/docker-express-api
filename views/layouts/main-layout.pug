                        a(href="/feed/posts", class=(path === '/view-jobs' ? 'active' : '')) View Jobs
                    li.mobile-nav__item 
                        a(href="/edit-jobs", class=(path === '/' ? 'active' : '')) Edit Jobs
                    li.mobile-nav__item
                        a(href="/teams", class=(path === '/products' ? 'active' : '')) Teams
