extends ./layouts/main-layout.pug

block content

  main
    head
      title= title
    body
      h1 Posts page
      
      each p in ps
        p Job: #{p.job} 
        p Description: #{p.description}
        div.functionality 
          a.btn(href="/feed/edit-jobs/"+p._id) Edit
          input(type="hidden" name="pstId" value=p._id )
          button.btn(type="button" onClick="deletePost(this)") Delete
          hr
    script(type='text/javascript' src='/js/admin.js')